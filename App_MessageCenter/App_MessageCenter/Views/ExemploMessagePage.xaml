<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_MessageCenter.Views.ExemploMessagePage"
             Title="MensagingCenter">

    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button x:Name="btnPublicar" Text="Publicar" Clicked="btnPublicar_Clicked"/>
            <Button x:Name="btnSubscrever" Text="Assinar" Clicked="btnSubscrever_Clicked"/>
            <Button x:Name="btnLimpar" Text="Limpar" Clicked="btnLimpar_Clicked"/>
        </StackLayout>
        <ListView x:Name="lvwEventos"/>
    </StackLayout>

</ContentPage>